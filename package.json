{
  "name": "creativechain-universe",
  "version": "0.0.1",
  "description": "Creativechain is a blockchain project for the registration, authentication and distribution of digital free culture.",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron . --allow-file-access-from-files",
    "postinstall": "install-app-deps",
    "compile": "build -wl --x64"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/creativechain/creativechain-universe.git"
  },
  "keywords": [
    "blokchain",
    "creativecoin",
    "creativechain",
    "bitcoin",
    "content",
    "digital",
    "free",
    "distribution",
    "registration"
  ],
  "author": "The Creativechain Developers",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/creativechain/creativechain-universe/issues"
  },
  "homepage": "https://github.com/creativechain/creativechain-universe#readme",
  "dependencies": {
    "bitcoin": "^3.0.1",
    "bitcoind-rpc": "^0.7.0",
    "bitcoinjs-lib": "^3.2.1",
    "buffer-reverse": "^1.0.1",
    "dialogs": "^1.1.20",
    "drag-drop": "^2.13.2",
    "electron-dl": "^1.10.0",
    "execsql": "0.0.3",
    "handbrake-js": "^2.2.2",
    "imagemin": "^5.3.1",
    "imagemin-jpegtran": "^5.0.2",
    "imagemin-pngquant": "^5.0.1",
    "lzma": "^2.3.2",
    "mime-types": "^2.1.17",
    "node-json-rpc": "0.0.1",
    "os-locale": "^2.1.0",
    "qrcode": "^0.9.0",
    "sha256": "^0.2.0",
    "sqlite3": "3.1.8",
    "utf8": "^2.1.2",
    "varint": "^5.0.0",
    "webtorrent": "^0.98.20"
  },
  "devDependencies": {
    "electron": "^1.8.1",
    "electron-builder": "^17.10.0"
  },
  "build": {
    "appId": "net.creativechain.universe",
    "productName": "Creativechain Universe",
    "directories": {
      "app": "./"
    },
    "files": [
      "**/*",
      "!bin",
      "!build",
      "!build.js",
      "!dist",
      "!resources",
      "!app.conf",
      "!session.crea",
      "!trantor.dat",
      "!database/index.db",
      "!database/index.db-journal"
    ],
    "mac": {
      "category": "public.app-category.entertainment",
      "icon": "build/mac/icon/icon.icns",
      "type": "distribution"
    },
    "win": {
      "icon": "build/win/icon/icon.ico",
      "target": "portable"
    },
    "linux": {
      "icon": "build/linux/icon/",
      "synopsis": "A blockchain project for the registration, authentication and distribution of digital free culture.",
      "category": "Utility",
      "executableName": "creativechain-universe"
    }
  }
}
