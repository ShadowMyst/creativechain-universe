{
  "name": "creativechain-platform",
  "version": "0.0.3",
  "description": "Creativechain is a blockchain project for the registration, authentication and distribution of digital free culture.",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron . --allow-file-access-from-files",
    "postinstall": "install-app-deps",
    "postinstall-win": "cd node_modules/sqlite3 && npm install nan && npm run prepublish && node-gyp configure --module_name=node_sqlite3 --module_path=../lib/binding/electron-v1.4-win32-x64 && node-gyp rebuild --target=1.4.13 --arch=x64 --target_platform=win32 --dist-url=https://atom.io/download/atom-shell --module_name=node_sqlite3 --module_path=../lib/binding/electron-v1.4-win32-x64",
    "build-linux": "build -l --x64",
    "build-win": "build -w --x64",
    "build-mac": "build -m --x64"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/creativechain/creativechain-universe.git"
  },
  "keywords": [
    "blokchain",
    "creativecoin",
    "creativechain",
    "bitcoin",
    "content",
    "digital",
    "free",
    "distribution",
    "registration"
  ],
  "author": {
    "name": "The Creativechain Developers",
    "email": "info@creativechain.org"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/creativechain/creativechain-universe/issues"
  },
  "homepage": "https://www.creativechain.org",
  "dependencies": {
    "altcoin-rpc": "^1.0.2",
    "bitcoinjs-lib": "^3.3.1",
    "buffer-reverse": "^1.0.1",
    "coinselect": "git://github.com/creativechain/coinselect.git",
    "csv-writer": "^1.0.0",
    "drag-drop": "^2.13.2",
    "electron-dl": "^1.10.0",
    "electron-is-dev": "^0.3.0",
    "file-size": "^1.0.0",
    "ipfs": "creativechain/js-ipfs",
    "lzma": "^2.3.2",
    "mime-types": "^2.1.17",
    "moment": "^2.19.4",
    "node-json-rpc": "0.0.1",
    "open": "0.0.5",
    "os-locale": "^2.1.0",
    "path": "^0.12.7",
    "qrcode": "^0.9.0",
    "semver": "^5.5.0",
    "sha256": "^0.2.0",
    "sqlite3": "^3.1.8",
    "upath": "^1.0.2",
    "utf8": "^2.1.2",
    "varint": "^5.0.0"
  },
  "devDependencies": {
    "electron": "1.8.2",
    "electron-builder": "^17.10.0"
  },
  "build": {
    "appId": "net.creativechain.platform",
    "productName": "Creativechain",
    "directories": {
      "app": "./"
    },
    "files": [
      "**/*",
      "!bin",
      "!build",
      "!build.js",
      "!dist",
      "!resources",
      "!app.conf",
      "!session.crea",
      "!trantor.dat",
      "!database/index.db",
      "!database/index.db-journal",
      "extra/dbmigrations/",
      "extra/credentials.json",
      "extra/credentials_prod.json",
      "extra/index.db.sql"
    ],
    "mac": {
      "category": "public.app-category.entertainment",
      "icon": "build/mac/icon/icon.icns",
      "type": "distribution",
      "target": "dmg"
    },
    "win": {
      "icon": "build/win/icon/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "build/linux/icon/",
      "synopsis": "A blockchain project for the registration, authentication and distribution of digital free culture.",
      "category": "Utility",
      "executableName": "creativechain",
      "target": "tar.gz"
    }
  }
}
